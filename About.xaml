        <Label Content="Version: 1.1.07" HorizontalAlignment="Left" Margin="195,78,0,0" VerticalAlignment="Top" Height="54" Width="136" Foreground="#FF079F08" FontFamily="{StaticResource Visitor}" FontSize="18"/>
