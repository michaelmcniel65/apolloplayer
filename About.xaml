        <Label Content="&#59599;" HorizontalAlignment="Left" Margin="195,145,0,0" VerticalAlignment="Top" Height="27" Width="26" Foreground="#FF079F08" FontFamily="Segoe MDL2 Assets" FontSize="16"/>
        <Label Content="michaelcmcniel@gmail.com" HorizontalAlignment="Left" Margin="226,172,0,0" VerticalAlignment="Top" Height="27" Width="217" Foreground="#FF079F08" FontFamily="Bahnschrift" FontSize="16"/>
        <Label Content="&#59157;" HorizontalAlignment="Left" Margin="195,172,0,0" VerticalAlignment="Top" Height="27" Width="26" Foreground="#FF079F08" FontFamily="Segoe MDL2 Assets" FontSize="16"/>
        <Button x:Name="btnClose" Content="Close" BorderBrush="#FF202126" Background="Black" Foreground="#FF00DF00" FontFamily="Visitor TT1 BRK" FontSize="16" Click="btnClose_Click" Margin="495,196,30,24"/>
    </Grid>
</Window>
